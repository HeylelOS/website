#!/bin/sh

srcdir=`dirname $0`

while getopts '' opt
do
	case "${opt}" in
		*) printf 'usage: %s [--] [environ...]\n' "`basename $0`" ;;
	esac
done

[ ! -z "$*" ] && export -- "$@"

if [ -z "${PHP}" ]
then
	for PHP in php
	do [ ! -z `which "${PHP}"` ] && break
	done
fi

if [ ! -z "${PHP}" ]
then printf "Using PHP '%s'\n" "${PHP}"
else printf "Unable to find PHP\n" ; exit 1
fi

[ -z "${WWW}" ] && WWW=www

cat - "${srcdir}/Makefile.in" > Makefile <<EOF 
PHP=${PHP}
WWW=${WWW}
EOF

